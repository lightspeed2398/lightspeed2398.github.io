{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/view-formatting.schema.json",
  "hideColumnHeader": true,
  "hideSelection": true,
  "rowFormatter": {
    "elmType": "div",
    "style": {
      "display": "flex",
      "flex-direction": "row",
      "align-items": "center",
      "font-family": "Arial, sans-serif",
      "background-color": "rgba(24, 45, 76, 0.75)",
      "backdrop-filter": "blur(10px)",
      "border": "1px solid rgba(51, 221, 236, 0.2)",
      "border-radius": "12px",
      "padding": "20px",
      "margin": "12px 8px",
      "box-shadow": "0 4px 15px rgba(0, 0, 0, 0.2)",
      "transition": "transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease",
      "color": "#ffffff"
    },
    ":hover": {
      "transform": "translateY(-5px)",
      "box-shadow": "0 8px 30px -5px rgba(51, 221, 236, 0.5)",
      "border-color": "rgba(51, 221, 236, 0.4)"
    },
    "children": [
      {
        "elmType": "div",
        "style": {
          "display": "=if([$Personal_Photo], 'flex', 'none')",
          "flex-shrink": "0",
          "margin-right": "20px"
        },
        "children": [
          {
            "elmType": "img",
            "attributes": {
              "src": "=if([$Personal_Photo], getThumbnailImage([$Personal_Photo], 200, 200), '')"
            },
            "style": {
              "width": "80px",
              "height": "80px",
              "border-radius": "50%",
              "border": "2px solid #33ddec"
            }
          }
        ]
      },
      {
        "elmType": "div",
        "style": {
          "display": "flex",
          "flex-direction": "column",
          "flex-grow": "1",
          "min-width": "0"
        },
        "children": [
          {
            "elmType": "div",
            "style": {
              "display": "flex",
              "flex-direction": "column",
              "margin-bottom": "15px"
            },
            "children": [
              {
                "elmType": "div",
                "txtContent": "[$Title]",
                "style": {
                  "font-size": "20px",
                  "font-weight": "600",
                  "color": "#ffffff"
                }
              },
              {
                "elmType": "div",
                "txtContent": "[$Job_Title]",
                "style": {
                  "font-size": "16px",
                  "color": "#cceeff",
                  "padding-top": "4px",
                  "display": "=if([$Job_Title], 'block', 'none')"
                }
              },
              {
                "elmType": "div",
                "style": {
                  "font-size": "14px",
                  "color": "#cceeff",
                  "display": "=if([$Office], 'flex', 'none')",
                  "align-items": "center",
                  "padding-top": "5px"
                },
                "children": [
                  {
                    "elmType": "span",
                    "txtContent": "üìç ",
                    "style": {
                      "margin-right": "5px",
                      "color": "#33ddec"
                    }
                  },
                  {
                    "elmType": "span",
                    "txtContent": "[$Office]"
                  }
                ]
              }
            ]
          },
          {
            "elmType": "div",
            "style": {
              "display": "flex",
              "flex-direction": "row",
              "width": "100%",
              "gap": "20px"
            },
            "children": [
              {
                "elmType": "div",
                "style": {
                  "flex": "1",
                  "font-size": "13px",
                  "min-width": "150px"
                },
                "children": [
                  {
                    "elmType": "div",
                    "txtContent": "Current Work Interests",
                    "style": {
                      "font-weight": "bold",
                      "color": "#33ddec",
                      "margin-bottom": "5px"
                    }
                  },
                  {
                    "elmType": "div",
                    "txtContent": "=if([$Current_work_interests], [$Current_work_interests], 'Not specified')",
                    "style": {
                      "color": "=if([$Current_work_interests], '#e0e0e0', '#8b9fb5')",
                      "font-style": "=if([$Current_work_interests], 'normal', 'italic')"
                    }
                  }
                ]
              },
              {
                "elmType": "div",
                "style": {
                  "flex": "1",
                  "font-size": "13px",
                  "min-width": "150px"
                },
                "children": [
                  {
                    "elmType": "div",
                    "txtContent": "Previous Work Interests",
                    "style": {
                      "font-weight": "bold",
                      "color": "#33ddec",
                      "margin-bottom": "5px"
                    }
                  },
                  {
                    "elmType": "div",
                    "txtContent": "=if([$Previous_work_interests], [$Previous_work_interests], 'Not specified')",
                    "style": {
                      "color": "=if([$Previous_work_interests], '#e0e0e0', '#8b9fb5')",
                      "font-style": "=if([$Previous_work_interests], 'normal', 'italic')"
                    }
                  }
                ]
              },
              {
                "elmType": "div",
                "style": {
                  "flex": "1",
                  "font-size": "13px",
                  "min-width": "150px"
                },
                "children": [
                  {
                    "elmType": "div",
                    "txtContent": "Hobbies & Fun Facts",
                    "style": {
                      "font-weight": "bold",
                      "color": "#33ddec",
                      "margin-bottom": "5px"
                    }
                  },
                  {
                    "elmType": "div",
                    "txtContent": "=if([$Hobbies_Facts], [$Hobbies_Facts], 'Not specified')",
                    "style": {
                      "color": "=if([$Hobbies_Facts], '#e0e0e0', '#8b9fb5')",
                      "font-style": "=if([$Hobbies_Facts], 'normal', 'italic')"
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
