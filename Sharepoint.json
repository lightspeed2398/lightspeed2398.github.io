{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/view-formatting.schema.json",
  "formatter": {
    "elmType": "div",
    "style": {
      "display": "flex",
      "flex-direction": "column",
      "width": "360px",
      "margin": "10px",
      "font-family": "Arial, sans-serif",
      "background-image": "linear-gradient(to bottom, #ffffff, #f7f9fc)",
      "border-radius": "8px",
      "height": "auto",
      "overflow": "visible",
      "box-shadow": "0 4px 12px rgba(0, 52, 121, 0.1)",
      "transition": "all 0.2s ease-in-out"
    },
    ":hover": {
      "transform": "translateY(-4px)",
      "box-shadow": "0 8px 24px rgba(0, 52, 121, 0.15)"
    },
    "children": [
      {
        "elmType": "div",
        "style": {
          "display": "flex",
          "flex-direction": "column",
          "align-items": "center",
          "text-align": "center",
          "padding": "25px 20px",
          "border-bottom": "1px solid #f0f0f0"
        },
        "children": [
          {
            "elmType": "div",
            "style": {
              "display": "=if([$Personal_Photo], 'flex', 'none')",
              "margin-bottom": "20px"
            },
            "children": [
              {
                "elmType": "div",
                "style": {
                  "display": "flex",
                  "align-items": "center",
                  "justify-content": "center",
                  "width": "120px",
                  "height": "120px",
                  "border-radius": "50%",
                  "background-image": "linear-gradient(45deg, #62c3f4, #33ddec)"
                },
                "children": [
                  {
                    "elmType": "img",
                    "attributes": {
                      "src": "=if([$Personal_Photo], getThumbnailImage([$Personal_Photo], 400, 400), '')"
                    },
                    "style": {
                      "width": "112px",
                      "height": "112px",
                      "object-fit": "cover",
                      "border-radius": "50%",
                      "border": "3px solid #ffffff"
                    }
                  }
                ]
              }
            ]
          },
          {
            "elmType": "div",
            "txtContent": "[$Title]",
            "style": {
              "font-size": "26px",
              "font-weight": "700",
              "color": "#182d4c",
              "margin-bottom": "4px"
            }
          },
          {
            "elmType": "div",
            "txtContent": "[$Job_Title]",
            "style": {
              "font-size": "16px",
              "color": "#003479",
              "font-weight": "400",
              "display": "=if([$Job_Title], 'block', 'none')"
            }
          },
          {
            "elmType": "div",
            "style": {
              "margin-top": "15px",
              "display": "=if([$Office], 'block', 'none')"
            },
            "children": [
              {
                "elmType": "div",
                "style": {
                  "display": "inline-flex",
                  "align-items": "center",
                  "padding": "4px 12px",
                  "border-radius": "16px",
                  "background-color": "rgba(0, 52, 121, 0.08)"
                },
                "children": [
                  {
                    "elmType": "span",
                    "txtContent": "üìç ",
                    "style": {"margin-right": "6px", "font-size": "16px"}
                  },
                  {
                    "elmType": "span",
                    "txtContent": "[$Office]",
                    "style": {"font-size": "14px", "color": "#003479", "font-weight": "600"}
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "elmType": "div",
        "style": {
          "padding": "20px 25px 25px 25px"
        },
        "children": [
          {
            "elmType": "div",
            "children": [
              {
                "elmType": "div",
                "style": {"display": "flex", "align-items": "center", "margin-bottom": "8px"},
                "children": [
                  {"elmType": "span", "txtContent": "üí°", "style": {"margin-right": "8px", "font-size": "18px"}},
                  {"elmType": "span", "txtContent": "Current Work Interests", "style": {"font-size": "15px", "font-weight": "700", "color": "#003479"}}
                ]
              },
              {"elmType": "div", "txtContent": "[$Current_work_interests]", "style": {"font-size": "14px", "color": "#333", "white-space": "pre-line", "line-height": "1.6", "word-break": "break-word", "padding-left": "26px", "display": "=if([$Current_work_interests], 'block', 'none')"}},
              {"elmType": "div", "txtContent": "Not specified", "style": {"font-size": "14px", "font-style": "italic", "color": "#888", "padding-left": "26px", "display": "=if([$Current_work_interests], 'none', 'block')"}}
            ]
          },
          {
            "elmType": "div",
            "style": {"margin-top": "20px"},
            "children": [
              {
                "elmType": "div",
                "style": {"display": "flex", "align-items": "center", "margin-bottom": "8px"},
                "children": [
                  {"elmType": "span", "txtContent": "üìö", "style": {"margin-right": "8px", "font-size": "18px"}},
                  {"elmType": "span", "txtContent": "Previous Work Interests", "style": {"font-size": "15px", "font-weight": "700", "color": "#003479"}}
                ]
              },
              {"elmType": "div", "txtContent": "[$Previous_work_interests]", "style": {"font-size": "14px", "color": "#333", "white-space": "pre-line", "line-height": "1.6", "word-break": "break-word", "padding-left": "26px", "display": "=if([$Previous_work_interests], 'block', 'none')"}},
              {"elmType": "div", "txtContent": "Not specified", "style": {"font-size": "14px", "font-style": "italic", "color": "#888", "padding-left": "26px", "display": "=if([$Previous_work_interests], 'none', 'block')"}}
            ]
          },
          {
            "elmType": "div",
            "style": {"margin-top": "20px"},
            "children": [
              {
                "elmType": "div",
                "style": {"display": "flex", "align-items": "center", "margin-bottom": "8px"},
                "children": [
                  {"elmType": "span", "txtContent": "üéâ", "style": {"margin-right": "8px", "font-size": "18px"}},
                  {"elmType": "span", "txtContent": "Hobbies & Fun Facts", "style": {"font-size": "15px", "font-weight": "700", "color": "#003479"}}
                ]
              },
              {"elmType": "div", "txtContent": "[$Hobbies_Facts]", "style": {"font-size": "14px", "color": "#333", "white-space": "pre-line", "line-height": "1.6", "word-break": "break-word", "padding-left": "26px", "display": "=if([$Hobbies_Facts], 'block', 'none')"}},
              {"elmType": "div", "txtContent": "Not specified", "style": {"font-size": "14px", "font-style": "italic", "color": "#888", "padding-left": "26px", "display": "=if([$Hobbies_Facts], 'none', 'block')"}}
            ]
          }
        ]
      }
    ]
  }
}
