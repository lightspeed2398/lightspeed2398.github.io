{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/view-formatting.schema.json",
  "rowFormatter": {
    "elmType": "div",
    "style": {
      "display": "flex",
      "flex-direction": "row",
      "align-items": "center",
      "width": "100%",
      "box-sizing": "border-box",
      "font-family": "Arial, sans-serif",
      "background-color": "#ffffff",
      "padding": "15px 20px",
      "border-bottom": "1px solid #e0e0e0",
      "transition": "background-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out"
    },
    ":hover": {
      "background-color": "#f7f9fc",
      "box-shadow": "inset 4px 0 0 #005a9e"
    },
    "children": [
      {
        "elmType": "div",
        "style": {
          "display": "=if([$Personal_Photo], 'flex', 'none')",
          "flex-shrink": "0",
          "margin-right": "20px"
        },
        "children": [
          {
            "elmType": "img",
            "attributes": {
              "src": "=if([$Personal_Photo], getThumbnailImage([$Personal_Photo], 200, 200), '')"
            },
            "style": {
              "width": "72px",
              "height": "72px",
              "border-radius": "50%"
            }
          }
        ]
      },
      {
        "elmType": "div",
        "style": {
          "display": "flex",
          "flex-direction": "column",
          "flex-grow": "1",
          "min-width": "0"
        },
        "children": [
          {
            "elmType": "div",
            "style": {
              "display": "flex",
              "justify-content": "space-between",
              "align-items": "flex-start",
              "width": "100%",
              "margin-bottom": "12px"
            },
            "children": [
              {
                "elmType": "div",
                "style": {
                  "display": "flex",
                  "flex-direction": "column"
                },
                "children": [
                  {
                    "elmType": "div",
                    "txtContent": "[$Title]",
                    "style": {
                      "font-size": "18px",
                      "font-weight": "600",
                      "color": "#182d4c"
                    }
                  },
                  {
                    "elmType": "div",
                    "txtContent": "[$Job_Title]",
                    "style": {
                      "font-size": "15px",
                      "color": "#595959",
                      "padding-top": "2px",
                      "display": "=if([$Job_Title], 'block', 'none')"
                    }
                  }
                ]
              },
              {
                "elmType": "div",
                "style": {
                  "font-size": "14px",
                  "color": "#666666",
                  "display": "=if([$Office], 'flex', 'none')",
                  "align-items": "center",
                  "flex-shrink": "0",
                  "margin-left": "15px",
                  "padding-top": "2px"
                },
                "children": [
                  {
                    "elmType": "span",
                    "txtContent": "üìç ",
                    "style": {
                      "margin-right": "5px"
                    }
                  },
                  {
                    "elmType": "span",
                    "txtContent": "[$Office]"
                  }
                ]
              }
            ]
          },
          {
            "elmType": "div",
            "style": {
              "display": "flex",
              "flex-direction": "row",
              "width": "100%",
              "gap": "20px"
            },
            "children": [
              {
                "elmType": "div",
                "style": {
                  "flex": "1",
                  "font-size": "13px",
                  "min-width": "150px"
                },
                "children": [
                  {
                    "elmType": "div",
                    "txtContent": "Current Work Interests",
                    "style": {
                      "font-weight": "bold",
                      "color": "#003479",
                      "margin-bottom": "5px"
                    }
                  },
                  {
                    "elmType": "div",
                    "txtContent": "=if([$Current_work_interests], [$Current_work_interests], 'Not specified')",
                    "style": {
                      "color": "=if([$Current_work_interests], '#333', '#888')",
                      "font-style": "=if([$Current_work_interests], 'normal', 'italic')"
                    }
                  }
                ]
              },
              {
                "elmType": "div",
                "style": {
                  "flex": "1",
                  "font-size": "13px",
                  "min-width": "150px"
                },
                "children": [
                  {
                    "elmType": "div",
                    "txtContent": "Previous Work Interests",
                    "style": {
                      "font-weight": "bold",
                      "color": "#003479",
                      "margin-bottom": "5px"
                    }
                  },
                  {
                    "elmType": "div",
                    "txtContent": "=if([$Previous_work_interests], [$Previous_work_interests], 'Not specified')",
                    "style": {
                      "color": "=if([$Previous_work_interests], '#333', '#888')",
                      "font-style": "=if([$Previous_work_interests], 'normal', 'italic')"
                    }
                  }
                ]
              },
              {
                "elmType": "div",
                "style": {
                  "flex": "1",
                  "font-size": "13px",
                  "min-width": "150px"
                },
                "children": [
                  {
                    "elmType": "div",
                    "txtContent": "Hobbies & Fun Facts",
                    "style": {
                      "font-weight": "bold",
                      "color": "#003479",
                      "margin-bottom": "5px"
                    }
                  },
                  {
                    "elmType": "div",
                    "txtContent": "=if([$Hobbies_Facts], [$Hobbies_Facts], 'Not specified')",
                    "style": {
                      "color": "=if([$Hobbies_Facts], '#333', '#888')",
                      "font-style": "=if([$Hobbies_Facts], 'normal', 'italic')"
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}
