{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/row-formatting.schema.json",
  "rowFormatter": {
    "elmType": "div",
    "style": {
      "margin": "12px",
      "width": "calc(100% - 24px)",
      "box-sizing": "border-box"
    },
    "customRowAction": {
      "action": "defaultClick"
    },
    "children": [
      {
        "elmType": "div",
        "style": {
          "display": "flex",
          "flex-direction": "row",
          "align-items": "flex-start",
          "padding": "24px",
          "border-radius": "12px",
          "background-color": "#ffffff",
          "box-shadow": "0 6px 18px rgba(0, 0, 0, 0.1)",
          "width": "100%",
          "box-sizing": "border-box",
          "transition": "transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out"
        },
        "children": [
          {
            "elmType": "div",
            "style": {
              "margin-right": "24px",
              "flex-shrink": "0"
            },
            "children": [
              {
                "elmType": "img",
                "attributes": {
                  "src": "[$Photo.serverRelativeUrl]",
                  "alt": "='Photo of ' + [$Name]"
                },
                "style": {
                  "width": "160px",
                  "height": "160px",
                  "border-radius": "50%",
                  "object-fit": "cover",
                  "border": "4px solid #0078d4"
                },
                "visible": "=length([$Photo.serverRelativeUrl]) > 0"
              },
              {
                "elmType": "div",
                "style": {
                  "width": "160px",
                  "height": "160px",
                  "border-radius": "50%",
                  "background-color": "#f0f0f0",
                  "display": "flex",
                  "align-items": "center",
                  "justify-content": "center",
                  "border": "4px solid #e0e0e0"
                },
                "children": [
                  {
                    "elmType": "span",
                    "attributes": {
                      "iconName": "Contact"
                    },
                    "style": {
                      "font-size": "60px",
                      "color": "#a0a0a0"
                    }
                  }
                ],
                "visible": "=length([$Photo.serverRelativeUrl]) == 0 || [$Photo.serverRelativeUrl] == ''"
              }
            ]
          },
          {
            "elmType": "div",
            "style": {
              "display": "flex",
              "flex-direction": "column",
              "flex-grow": "1"
            },
            "children": [
              {
                "elmType": "div",
                "txtContent": "[$Name]",
                "style": {
                  "font-size": "28px",
                  "font-weight": "700",
                  "color": "#201f1e",
                  "margin-bottom": "6px"
                }
              },
              {
                "elmType": "div",
                "txtContent": "[$JobTitle]",
                "style": {
                  "font-size": "20px",
                  "font-weight": "400",
                  "color": "#0078d4",
                  "margin-bottom": "16px"
                }
              },
              {
                "elmType": "div",
                "style": {
                  "display": "flex",
                  "align-items": "center",
                  "margin-bottom": "10px",
                  "font-size": "15px",
                  "color": "#323130"
                },
                "children": [
                  {
                    "elmType": "span",
                    "attributes": {
                      "iconName": "POISolid"
                    },
                    "style": {
                      "margin-right": "10px",
                      "font-size": "18px",
                      "color": "#005a9e"
                    }
                  },
                  {
                    "elmType": "span",
                    "txtContent": "='Office: ' + [$Office]"
                  }
                ],
                "visible": "=length([$Office]) > 0"
              },
              {
                "elmType": "div",
                "style": {
                  "display": "flex",
                  "align-items": "center",
                  "margin-bottom": "10px",
                  "font-size": "15px",
                  "color": "#323130"
                },
                "children": [
                  {
                    "elmType": "span",
                    "attributes": {
                      "iconName": "UserFollowed"
                    },
                    "style": {
                      "margin-right": "10px",
                      "font-size": "18px",
                      "color": "#005a9e"
                    }
                  },
                  {
                    "elmType": "span",
                    "txtContent": "='Team Focus: ' + [$TeamFocus]"
                  }
                ],
                "visible": "=length([$TeamFocus]) > 0"
              },
              {
                "elmType": "div",
                "style": {
                  "display": "flex",
                  "align-items": "center",
                  "margin-bottom": "10px",
                  "font-size": "15px",
                  "color": "#605e5c"
                },
                "children": [
                  {
                    "elmType": "span",
                    "attributes": {
                      "iconName": "History"
                    },
                    "style": {
                      "margin-right": "10px",
                      "font-size": "18px"
                    }
                  },
                  {
                    "elmType": "span",
                    "txtContent": "='Formerly: ' + [$PreviousFocus]"
                  }
                ],
                "visible": "=length([$PreviousFocus]) > 0"
              },
              {
                "elmType": "div",
                "style": {
                  "margin-top": "16px",
                  "padding": "12px",
                  "background-color": "#f8f8f8",
                  "border-radius": "8px",
                  "font-size": "15px",
                  "color": "#323130"
                },
                "children": [
                  {
                    "elmType": "div",
                    "style": {
                      "display": "flex",
                      "align-items": "center",
                      "margin-bottom": "8px",
                      "font-weight": "600"
                    },
                    "children": [
                      {
                        "elmType": "span",
                        "attributes": {
                          "iconName": "LikeSolid"
                        },
                        "style": {
                          "margin-right": "10px",
                          "font-size": "18px",
                          "color": "#005a9e"
                        }
                      },
                      {
                        "elmType": "span",
                        "txtContent": "Personal Hobbies & Interests"
                      }
                    ]
                  },
                  {
                    "elmType": "div",
                    "txtContent": "[$PersonalHobbies]",
                    "style": {
                      "line-height": "1.7",
                      "white-space": "pre-wrap"
                    }
                  }
                ],
                "visible": "=length([$PersonalHobbies]) > 0"
              }
            ]
          }
        ]
      }
    ]
  }
}
