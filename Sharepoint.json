{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/view-formatting.schema.json",
  "formatter": {
    "elmType": "div",
    "style": {
      "display": "flex",
      "flex-direction": "column",
      "width": "350px",
      "margin": "10px",
      "font-family": "Arial, sans-serif",
      "background-color": "#ffffff",
      "border-radius": "8px",
      "border-top": "5px solid #003479",
      "box-shadow": "0 4px 12px rgba(0, 52, 121, 0.1)",
      "transition": "all 0.2s ease-in-out"
    },
    "attributes": {
      "class": "ms-bgColor-white"
    },
    ":hover": {
      "transform": "translateY(-5px)",
      "box-shadow": "0 8px 24px rgba(0, 52, 121, 0.2)"
    },
    "children": [
      {
        "elmType": "div",
        "style": {
          "padding": "20px 20px 0 20px"
        },
        "children": [
          {
            "elmType": "div",
            "style": {
              "display": "=if([$Personal_Photo], 'flex', 'none')",
              "justify-content": "center",
              "margin-bottom": "15px"
            },
            "children": [
              {
                "elmType": "div",
                "style": {
                  "width": "100px",
                  "height": "100px",
                  "border-radius": "50%",
                  "overflow": "hidden",
                  "padding": "4px",
                  "background-color": "#62c3f4"
                },
                "children": [
                  {
                    "elmType": "img",
                    "attributes": {
                      "src": "=if([$Personal_Photo], getThumbnailImage([$Personal_Photo], 400, 400), '')"
                    },
                    "style": {
                      "width": "100%",
                      "height": "100%",
                      "object-fit": "cover",
                      "border-radius": "50%",
                      "border": "2px solid #ffffff"
                    }
                  }
                ]
              }
            ]
          },
          {
            "elmType": "div",
            "txtContent": "[$Title]",
            "style": {
              "font-size": "24px",
              "font-weight": "700",
              "color": "#182d4c",
              "text-align": "center",
              "margin-bottom": "4px"
            }
          },
          {
            "elmType": "div",
            "txtContent": "[$Job_Title]",
            "style": {
              "font-size": "16px",
              "color": "#595959",
              "text-align": "center",
              "margin-bottom": "8px",
              "display": "=if([$Job_Title], 'block', 'none')"
            }
          },
          {
            "elmType": "div",
            "style": {
              "font-size": "14px",
              "color": "#666666",
              "text-align": "center",
              "margin-bottom": "20px",
              "display": "=if([$Office], 'block', 'none')"
            },
            "children": [
              {
                "elmType": "span",
                "txtContent": "üìç ",
                "style": {"margin-right": "4px"}
              },
              {
                "elmType": "span",
                "txtContent": "[$Office]"
              }
            ]
          }
        ]
      },
      {
        "elmType": "div",
        "style": {
          "padding": "0 20px 20px 20px"
        },
        "children": [
          {
            "elmType": "div",
            "style": {
              "padding-top": "15px",
              "border-top": "1px solid #f0f0f0"
            },
            "children": [
              {
                "elmType": "div",
                "txtContent": "Current Work Interests",
                "style": {"font-size": "14px", "font-weight": "700", "color": "#003479", "margin-bottom": "5px"}
              },
              {
                "elmType": "div",
                "txtContent": "[$Current_work_interests]",
                "style": {"font-size": "14px", "color": "#333", "white-space": "pre-line", "overflow-wrap": "break-word", "display": "=if([$Current_work_interests], 'block', 'none')"}
              },
              {
                "elmType": "div",
                "txtContent": "Not specified",
                "style": {"font-size": "14px", "font-style": "italic", "color": "#888", "display": "=if([$Current_work_interests], 'none', 'block')"}
              }
            ]
          },
          {
            "elmType": "div",
            "style": {"margin-top": "15px"},
            "children": [
              {
                "elmType": "div",
                "txtContent": "Previous Work Interests",
                "style": {"font-size": "14px", "font-weight": "700", "color": "#003479", "margin-bottom": "5px"}
              },
              {
                "elmType": "div",
                "txtContent": "[$Previous_work_interests]",
                "style": {"font-size": "14px", "color": "#333", "white-space": "pre-line", "overflow-wrap": "break-word", "display": "=if([$Previous_work_interests], 'block', 'none')"}
              },
              {
                "elmType": "div",
                "txtContent": "Not specified",
                "style": {"font-size": "14px", "font-style": "italic", "color": "#888", "display": "=if([$Previous_work_interests], 'none', 'block')"}
              }
            ]
          },
          {
            "elmType": "div",
            "style": {"margin-top": "15px"},
            "children": [
              {
                "elmType": "div",
                "txtContent": "Hobbies & Fun Facts",
                "style": {"font-size": "14px", "font-weight": "700", "color": "#003479", "margin-bottom": "5px"}
              },
              {
                "elmType": "div",
                "txtContent": "[$Hobbies_Facts]",
                "style": {"font-size": "14px", "color": "#333", "white-space": "pre-line", "overflow-wrap": "break-word", "display": "=if([$Hobbies_Facts], 'block', 'none')"}
              },
              {
                "elmType": "div",
                "txtContent": "Not specified",
                "style": {"font-size": "14px", "font-style": "italic", "color": "#888", "display": "=if([$Hobbies_Facts], 'none', 'block')"}
              }
            ]
          }
        ]
      }
    ]
  }
}
