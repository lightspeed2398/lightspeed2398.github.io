{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/view-formatting.schema.json",
  "formatter": {
    "elmType": "div",
    "style": {
      "display": "flex",
      "flex-direction": "column",
      "width": "340px",
      "margin": "10px",
      "font-family": "Arial, sans-serif",
      "background-color": "#ffffff",
      "border": "1px solid #e0e0e0",
      "border-top": "5px solid #003479",
      "border-radius": "4px",
      "padding": "15px"
    },
    "children": [
      {
        "elmType": "div",
        "style": {
          "display": "=if([$Personal_Photo], 'block', 'none')",
          "text-align": "center",
          "margin-bottom": "15px"
        },
        "children": [
          {
            "elmType": "div",
            "style": {
              "width": "100px",
              "height": "100px",
              "border-radius": "50%",
              "background-color": "#62c3f4",
              "padding": "3px",
              "margin": "0 auto",
              "overflow": "hidden"
            },
            "children": [
              {
                "elmType": "img",
                "attributes": {
                  "src": "=if([$Personal_Photo], getThumbnailImage([$Personal_Photo], 200, 200), '')"
                },
                "style": {
                  "width": "100%",
                  "height": "100%",
                  "border-radius": "50%"
                }
              }
            ]
          }
        ]
      },
      {
        "elmType": "div",
        "txtContent": "[$Title]",
        "style": {
          "font-size": "22px",
          "font-weight": "bold",
          "color": "#182d4c",
          "text-align": "center",
          "margin-bottom": "4px"
        }
      },
      {
        "elmType": "div",
        "txtContent": "[$Job_Title]",
        "style": {
          "font-size": "16px",
          "color": "#595959",
          "text-align": "center",
          "margin-bottom": "10px",
          "display": "=if([$Job_Title], 'block', 'none')"
        }
      },
      {
        "elmType": "div",
        "style": {
          "font-size": "14px",
          "color": "#666666",
          "text-align": "center",
          "margin-bottom": "15px",
          "display": "=if([$Office], 'block', 'none')"
        },
        "children": [
          {
            "elmType": "span",
            "txtContent": "üìç "
          },
          {
            "elmType": "span",
            "txtContent": "[$Office]"
          }
        ]
      },
      {
        "elmType": "div",
        "style": {
          "margin-top": "10px",
          "padding-top": "10px",
          "border-top": "1px solid #f0f0f0"
        },
        "children": [
          {
            "elmType": "div",
            "txtContent": "Current Work Interests",
            "style": {"font-size": "14px", "font-weight": "bold", "color": "#003479", "margin-bottom": "5px"}
          },
          {
            "elmType": "div",
            "txtContent": "[$Current_work_interests]",
            "style": {"font-size": "14px", "color": "#333", "white-space": "pre-line", "word-break": "break-word", "display": "=if([$Current_work_interests], 'block', 'none')"}
          },
          {
            "elmType": "div",
            "txtContent": "Not specified",
            "style": {"font-size": "14px", "font-style": "italic", "color": "#888", "display": "=if([$Current_work_interests], 'none', 'block')"}
          }
        ]
      },
      {
        "elmType": "div",
        "style": {"margin-top": "10px", "padding-top": "10px", "border-top": "1px solid #f0f0f0"},
        "children": [
          {
            "elmType": "div",
            "txtContent": "Previous Work Interests",
            "style": {"font-size": "14px", "font-weight": "bold", "color": "#003479", "margin-bottom": "5px"}
          },
          {
            "elmType": "div",
            "txtContent": "[$Previous_work_interests]",
            "style": {"font-size": "14px", "color": "#333", "white-space": "pre-line", "word-break": "break-word", "display": "=if([$Previous_work_interests], 'block', 'none')"}
          },
          {
            "elmType": "div",
            "txtContent": "Not specified",
            "style": {"font-size": "14px", "font-style": "italic", "color": "#888", "display": "=if([$Previous_work_interests], 'none', 'block')"}
          }
        ]
      },
      {
        "elmType": "div",
        "style": {"margin-top": "10px", "padding-top": "10px", "border-top": "1px solid #f0f0f0"},
        "children": [
          {
            "elmType": "div",
            "txtContent": "Hobbies & Fun Facts",
            "style": {"font-size": "14px", "font-weight": "bold", "color": "#003479", "margin-bottom": "5px"}
          },
          {
            "elmType": "div",
            "txtContent": "[$Hobbies_Facts]",
            "style": {"font-size": "14px", "color": "#333", "white-space": "pre-line", "word-break": "break-word", "display": "=if([$Hobbies_Facts], 'block', 'none')"}
          },
          {
            "elmType": "div",
            "txtContent": "Not specified",
            "style": {"font-size": "14px", "font-style": "italic", "color": "#888", "display": "=if([$Hobbies_Facts], 'none', 'block')"}
          }
        ]
      }
    ]
  }
}
